    // Load in Drupal core AJAX library.
//     drupal_add_library('system', 'drupal.ajax');
    // Load in our custom JavaScript.
    drupal_add_js(drupal_get_path('module', 'ajax_og_subscribe') . '/ajax_og_subscribe.js', array('weight' => 98));
  }
}

